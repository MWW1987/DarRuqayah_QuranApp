@model ClassRoom

@{
    ViewData["Title"] = "ایجاد کلاس جدید";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<hr />
<div class="row" style="direction: rtl">
    <div class="col-md-4 text-right">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClassTime" class="control-label"></label>
                <input asp-for="ClassTime" class="form-control" />
                <span asp-validation-for="ClassTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OstadId" class="control-label"></label>
                <select asp-for="OstadId" class ="form-control"  asp-items="ViewBag.OstadId" value="استاد را انتخاب کنید" ></select>
            </div>
            
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="ایجاد کلاس" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">برگشت به لیست کلاس ها</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
